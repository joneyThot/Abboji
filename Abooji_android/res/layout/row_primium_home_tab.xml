<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.android.abooji"
    android:id="@+id/ll1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center_horizontal"
    android:orientation="horizontal"
    android:padding="@dimen/margin_3" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/primium_imageview"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.6"
            android:orientation="vertical" >

            <com.android.abooji.view.TextViewPlus
                android:id="@+id/title_primium"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:padding="3dp"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/orange"
                android:textSize="@dimen/h_7"
                app:customFont="@string/font_normal" />

            <com.android.abooji.view.TextViewPlus
                android:id="@+id/card_primium"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:padding="3dp"
                android:singleLine="true"
                android:text=""
                android:textSize="@dimen/h_7"
                app:customFont="@string/font_normal" />

            <com.android.abooji.view.TextViewPlus
                android:id="@+id/offer_text_primium"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:padding="3dp"
                android:singleLine="true"
                android:text=""
                android:textSize="@dimen/h_7"
                app:customFont="@string/font_normal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="0.4"
            android:orientation="vertical" >

            <com.android.abooji.view.TextViewPlus
                android:id="@+id/primium_offer_type"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:padding="3dp"
                android:singleLine="true"
                android:text=""
                android:textSize="@dimen/h_7"
                app:customFont="@string/font_normal" />

            <com.android.abooji.view.TextViewPlus
                android:id="@+id/primium_mall_name"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:padding="3dp"
                android:singleLine="true"
                android:text=""
                android:textSize="@dimen/h_7"
                app:customFont="@string/font_normal" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>